				<control type="button" id="803">
					<description>ShutDownMAC</description>
					<label>31202</label>
					<include>Objects_ContextMenuButton</include>
					<onclick>Skin.SetBool(bmtransit)</onclick>
					<onclick>Dialog.Close(1111)</onclick>
					<onclick>Plex.ShutDownSystem</onclick>
				</control>
